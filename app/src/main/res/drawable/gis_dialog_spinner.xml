<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <!-- 线的宽度，颜色灰色 -->
            <stroke
                android:width="0.5dp"
                android:color="#F1F1F1"></stroke>
