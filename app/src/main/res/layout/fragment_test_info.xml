<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cqt_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beidian.beidiannonxinling.ui.activity.CqtTestActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_testInfo"
            style="@style/text_size11dp"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@color/cqt_button_background_blue"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/test_info"
            android:textColor="@color/text_color_white"/>
        <TextView
            android:id="@+id/tv_workInfo"
            style="@style/text_size11dp"
            android:background="@color/cqt_button_background_white"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/base_info"
            android:textColor="@color/text_color_gray"/>

    </LinearLayout>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:background="@color/shadow_color_line"/>

    <FrameLayout
        android:id="@+id/fl_testBody"
        android:layout_width="match_parent"
        android:orientation="vertical" android:layout_height="230dp">

    </FrameLayout>


</LinearLayout>
